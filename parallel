=======
ARGC=$#
COUNT=0

if [[ $ARGC -lt 2 ]]; then
	echo "Usage : $0 [EXECUTABLE] [DONNEES] [OPTIONS]"
	exit 1
fi

for arg do
	if [[ $COUNT > 0 ]]; then
		srun $1 $arg
	fi
	let COUNT++
done

echo "All jobs done !"
